{
	"name": "karma-esbuild",
	"version": "1.1.5",
	"description": "ESBuild preprocessor for karma test runner",
	"main": "dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/marvinhagemeister/karma-esbuild.git"
	},
	"scripts": {
		"build": "rimraf dist/ && tsc",
		"test": "ts-node test/run.ts",
		"run-karma": "ts-node test/run-karma.ts",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"karma-plugin",
		"karma-preprocessor",
		"esbuild"
	],
	"author": "Marvin Hagemeister <hello@marvinh.dev>",
	"license": "MIT",
	"files": [
		"dist/"
	],
	"dependencies": {
		"chokidar": "^3.5.1",
		"globby": "^11.0.2",
		"karma-sourcemap-loader": "^0.3.8",
		"minimatch": "^3.0.4",
		"tempy": "^1.0.0"
	},
	"peerDependencies": {
		"esbuild": ">=0.8.45"
	},
	"devDependencies": {
		"@types/karma": "^5.0.1",
		"@types/minimatch": "^3.0.3",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.19",
		"errorstacks": "^2.2.0",
		"esbuild": "^0.8.45",
		"husky": "^4.3.6",
		"karma": "^5.2.3",
		"karma-chrome-launcher": "^3.1.0",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"kolorist": "^1.2.8",
		"lint-staged": "^10.5.3",
		"mocha": "^8.2.1",
		"pentf": "^1.8.2",
		"prettier": "^2.2.1",
		"puppeteer": "^5.5.0",
		"rimraf": "^3.0.2",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,yml}": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"trailingComma": "all"
	}
}
